
@model WebApplication2.Models.IndexStoryViewModel
@using WebApplication2.Utils
@{
   // Layout = null;
    var stories = Model;
}
<h2> User's Stories </h2>

@if (stories != null && stories.Stories.Any()&& ViewBag.UserId!=null)
{
<table class="table" >
    <tr>
        <th>Titel</th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in stories.Stories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
              @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
</table>
}
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { userId = ViewBag.UserId, page = x }))
</div>


<div>
    <br />
    <p>Create New User</p>
    @Html.ActionLink("Create", "Create",new { userId = ViewBag.UserId })
</div>

